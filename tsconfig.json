{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "exclude": [
        "docs",
        "test",
        "node_modules",
        "dist",
        "src/mochaFixtures.ts",
        "src/playground.ts"
    ],
    "include": ["src/**/*.ts"]
}
